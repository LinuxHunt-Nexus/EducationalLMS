@using LearningManagement.Data.Enums
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <link rel="stylesheet" href="~/assets/css/base.css" asp-append-version="true" />

    <!-- Render the CSS section -->
    @await RenderSectionAsync("CustomCSS", required: false)
</head>

<body>
    <div class="row mx-auto">
        <!-- start: side menu -->
        <div class="col-1 text-white side-nav">
            <div id="sideNavBar" class="menu-list py-1">
                <div class="w-100 content">
                    <img src="~/assets/images/profile/profile.png"
                         alt=""
                         class="img-fluid" />
                </div>
                <a id="@SideNavBar.NavDashboard.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-solid fa-chart-column img-fluid"></i>
                        <p>dashboard</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavTeacher.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-solid fa-solid fa-user-tie img-fluid"></i>
                        <p>Teacher</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavCourse.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-solid fa-book-open img-fluid"></i>
                        <p>Course</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavStudent.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-solid fa-user-graduate img-fluid"></i>
                        <p>Student</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavInbox.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-solid fa-envelope img-fluid"></i>
                        <p>Inbox</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavCalender.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-solid fa-calendar img-fluid"></i>
                        <p>Calender</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavHelp.ToString()" href="">
                    <div class="w-100 content">
                        <i class="fa-regular fa-circle-question img-fluid"></i>
                        <p>Help</p>
                    </div>
                </a>
            </div>
        </div>
        <!-- end side menu -->
        <!-- start : icon for small device -->
        <div class="col-md-11 layout py-3">
            <ion-icon class="icon fs-1"
                      name="menu"
                      onclick="Toggle(this)"></ion-icon>
            <!-- end icon -->
            <!-- start : upper menu== -->
            <div class="row px-lg-4">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="d-inline py-4">Welcome to LMS</h3>
                        <div>
                            <a href="#"><i class="fa-regular fa-bell fs-4"></i></a>
                            <div class="dropdown- d-inline mx-2">
                                <a class="dropdown-toggle border-0" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-gear fs-4"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="~/Auth/Logout">Logout</a></li>
                                    <li><a class="dropdown-item" href="~/Auth/ChangePassword">Password Change</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                    @*<a href="#" class="fs-6">Home ></a>*@
                    <hr />
                </div>
            </div>
            <!-- end : upper menu -->
            <!--start: main content -->
            @RenderBody()
            <!-- end: main content -->
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

    <script src="~/assets/js/side-nav.js"></script>
    <script>

        var activeNav = '@ViewBag.ActiveSideNav';
        if (activeNav) {
            var navElement = document.getElementById(activeNav);
            navElement.classList.add('side-nav-active');
        }

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
