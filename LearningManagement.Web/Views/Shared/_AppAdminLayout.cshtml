@using LearningManagement.Data.Enums
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />

    <!--flatpickr date time picker-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <!--toast message-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css" />

    <!--alpine js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link rel="stylesheet" href="~/assets/css/base.css" asp-append-version="true" />

    <!-- Render the CSS section -->
    @await RenderSectionAsync("CustomCSS", required: false)


</head>

<body>
    <div class="row mx-auto">
        <!-- start: side menu -->
        <div class="col-1 text-white side-nav">
            <div id="sideNavBar" class="menu-list py-1">
                <div class="w-100 content">
                    <img src="~/assets/images/profile/profile.png"
                         alt=""
                         class="img-fluid" />
                </div>
                <a id="@SideNavBar.NavDashboard.ToString()" href="~/AppAdmin/Dashboard">
                    <div class="w-100 content">
                        <i class="fa-solid fa-chart-column img-fluid"></i>
                        <p>dashboard</p>
                    </div>
                </a>
                <a id="@SideNavBar.NavInstitutionList.ToString()" href="~/AppAdmin/InstitutionList">
                    <div class="w-100 content">
                        <i class="fa-solid fa-building-columns img-fluid"></i>
                        <p>Institution List</p>
                    </div>
                </a>
            </div>
        </div>
        <!-- end side menu -->
        <!-- start : icon for small device -->
        <div class="col-md-11 layout py-3">
            <ion-icon class="icon fs-1"
                      name="menu"
                      onclick="Toggle(this)"></ion-icon>
            <!-- end icon -->
            <!-- start : upper menu== -->
            <div class="row px-lg-4">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="d-inline py-4">Welcome to LMS Admin</h3>
                        <div>
                            <a href="#"><i class="fa-regular fa-bell fs-4"></i></a>
                            <div class="dropdown- d-inline mx-2">
                                <a class="dropdown-toggle border-0" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-gear fs-4"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="~/Auth/ChangePassword"><i class="fa-solid fa-lock"></i> Password Change</a></li>
                                    <li><a class="dropdown-item" href="~/Auth/Logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                    @* <a href="#" class="fs-6">Home ></a>*@
                    <hr />
                </div>
            </div>
            <!-- end : upper menu -->
            <!--start: main content -->
            @RenderBody()
            <!-- end: main content -->
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>

    <!--flatpickr date time picker-->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <!--toast message-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>

    <script src="~/assets/js/side-nav.js"></script>
    <script>
        // Toast setting
        iziToast.settings({
            timeout: 4000,
            close: true,
            progressBar: true,
            progressBarEasing: 'ease',
            position: 'topCenter',
        });


        // date picker
        flatpickr(".date-time-picker", {
            altInput: true,
            altFormat: "j F, Y",
            dateFormat: "d-m-Y"
        });

        const activeNav = '@ViewBag.ActiveSideNav';
        if (activeNav) {
            const navElement = document.getElementById(activeNav);
            navElement.classList.add('side-nav-active');
        }
        

        @Html.Partial("_PartialNotification")
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
