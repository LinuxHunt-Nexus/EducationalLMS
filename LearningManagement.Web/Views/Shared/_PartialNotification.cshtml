@using LearningManagement.Web.Helper
@using Newtonsoft.Json
@*@using LearningManagement.Data.Enums*@

@if (TempData["responseKey"] != null)
{
    var notification = JsonConvert.DeserializeObject<NotificationHelperModel>(TempData["responseKey"].ToString());
    <text>
        document.addEventListener("DOMContentLoaded", function() {
        iziToast.@notification.Type.ToString().ToLower() ({ title: '@notification.Type.ToString()', message: '@notification.Message'});
        });
    </text>
}

