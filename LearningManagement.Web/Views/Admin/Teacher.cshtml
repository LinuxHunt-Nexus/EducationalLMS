@using LearningManagement.Data.Enums
@using LearningManagement.Data.ViewModels
@model IEnumerable<TeacherModel>
@{
    Layout = "_InstitutionAdminLayout";
    ViewData["Title"] = "Admin-Teacher";
    ViewBag.ActiveSideNav = SideNavBar.NavTeacher.ToString();
    ViewBag.ActiveSubMenuNav = SubMenuNavBar.TeacherList.ToString();
}

@section CustomCSS {
    <link rel="stylesheet" href="~/assets/css/teacher-parent.css" asp-append-version="true" />
}

<!--start: main content -->
<div class="row px-lg-4">
    <div class="col-md-4 col-lg-2 nav-div">
        <partial name='_TeacherSubMenuPartial' />
    </div>
    <div class="col-md-8 col-lg-10 mt-4">
        <ion-icon class="icon fs-3 side-menu"
                  name="add-circle-sharp"
                  onclick="Submenu(this)"></ion-icon>

        <div class="card table-card">
            <h2 class="head">Teacher List</h2>
            <table class="table no-border text-center">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>Join Date</th>
                        <th>Photo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.JoiningDate?.ToString("dd MMM yy")</td>
                            <td><img src="~/Images/@(string.IsNullOrEmpty(item.ImageFileName) ? "default-image.png" : item.ImageFileName)" alt="" class="img-fluid table-image rounded-circle" /></td>
                            <td>
                                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                                <a asp-action="Details" asp-route-id="@item.InstitutionTeacherId"><i class="fa-solid fa-bookmark"></i></a>
                                @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<!-- end: main content -->
@section Scripts {
    <script type="text/javascript" src="~/assets/js/submenu.js" asp-append-version="true"></script>
}