@using LearningManagement.Data.Enums
@{
    Layout = "_InstitutionAdminLayout";
    ViewData["Title"] = "Admin-Teacher";
    ViewBag.ActiveSideNav = SideNavBar.NavTeacher.ToString(); 
    ViewBag.ActiveSubMenuNav = SubMenuNavBar.TeacherAddContent.ToString();
}

@section CustomCSS {
    <link rel="stylesheet" href="~/assets/css/teacher-parent.css" asp-append-version="true" />
}

<!--start: main content -->
<div class="row">
    <div class="col-md-4 col-lg-2 nav-div">
        <partial name='_TeacherSubMenuPartial' />
    </div>
    <div class="col-md-12 col-lg-10">
        <ion-icon
            class="icon fs-3 side-menu"
            name="add-circle-sharp"
            onclick="Submenu(this)"
        ></ion-icon>
          
        <div class="row information p-3">
            <h2 class="text-center">Add Course Content</h2>
            <form action="">
                <div class="row">
                    <div class="col-md-4 mt-2 lg-mt-0">
                        <label>Course Name</label>
                        <input
                            type="text"
                            placeholder="Course Name *"
                            class="form-control"
                        />
                    </div>
                    <div class="col-md-4 mt-2 lg-mt-0">
                        <label>Course Code</label>
                    
                        <select class="form-select text-muted">
                            <option value="01">
                                Course Code
                            </option>
                            <option value="01">MAT 101</option>
                            <option value="01">Eng 102</option>
                        </select>
                    
                    </div>
                    <div class="col-md-4 mt-2 lg-mt-0">
                        <label>Content Files</label>
                        <input
                            type="file"
                            name=""
                            placeholder="Select Files"
                            class="form-control"
                        />
                    </div>
                </div>
              
                <button class="mt-3 btn">submit info</button>
            </form>

            <!-- end section main form -->
        </div>
    </div>
</div>
<!-- end: main content -->
@section Scripts {
    <script type="text/javascript" src="~/assets/js/submenu.js" asp-append-version="true"></script>
}