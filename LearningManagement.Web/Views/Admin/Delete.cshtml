@using LearningManagement.Data.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using LearningManagement.Data.ViewModels
@model InstitutionViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Institution";
}

<h1>Delete Institution</h1>

<div>
    <h4>Are you sure you want to delete this institution?</h4>
    <div>
        <h4>Institution Name: @Model.InstitutionName</h4>
        <!-- Display other institution information here as needed -->
    </div>
    <form asp-action="DeleteConfirmed" asp-controller="Admin" asp-route-id="@Model.InstitutionId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
